<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/greska/rukov_greska.jsp</location>
    </error-page>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>loginservlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Zaposleni</servlet-name>
        <servlet-class>loginservlet.Zaposleni</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>logoutservlet.LogOutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>loginservlet.SignUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUp</servlet-name>
        <servlet-class>loginservlet.SignUp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DodajServlet</servlet-name>
        <servlet-class>dodajservlet.DodajServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubscrServl</servlet-name>
        <servlet-class>subscrservlet.SubscrServl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowBook</servlet-name>
        <servlet-class>miscellaneous.ShowBook</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Zaposleni</servlet-name>
        <url-pattern>/zaposleni</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/SignUpServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUp</servlet-name>
        <url-pattern>/SignUp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DodajServlet</servlet-name>
        <url-pattern>/DodajServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubscrServl</servlet-name>
        <url-pattern>/SubscrServl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowBook</servlet-name>
        <url-pattern>/ShowBook</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
